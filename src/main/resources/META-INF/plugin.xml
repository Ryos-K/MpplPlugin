<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.ryosk.mpplplugin</id>
    <name>MpplPlugin Template</name>
    <vendor>ryos-k</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="Mppl File"
                implementationClass="com.github.ryosk.mpplplugin.language.MpplFileType"
                fieldName="INSTANCE"
                language="Mppl"
                extensions="mpl"/>
        <lang.parserDefinition
                language="Mppl"
                implementationClass="com.github.ryosk.mpplplugin.language.MpplParserDefinition"/>
        <lang.syntaxHighlighterFactory
                language="Mppl"
                implementationClass="com.github.ryosk.mpplplugin.language.MpplSyntaxHighlighterFactory"/>
        <colorSettingsPage implementation="com.github.ryosk.mpplplugin.language.MpplColorSettingsPage"/>
        <annotator
                language="Mppl"
                implementationClass="com.github.ryosk.mpplplugin.language.MpplAnnotator"/>
    </extensions>
</idea-plugin>
